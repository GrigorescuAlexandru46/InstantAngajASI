
@{
    ViewBag.Title = "Lista tuturor joburilor pentru care ai aplicat";
}

<h2>@ViewBag.Title</h2>
<hr />

@if (ViewBag.AppliedJobList.Count > 0)
{
    <div class="row">
        <div class="list-group">
            @foreach (var job in ViewBag.AppliedJobList)
            {
                <a href="/Job/Show/@job.JobId" class="list-group-item col-md-12">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="col-md-12">
                                <h2 class="list-group-item-heading"><b>@job.Name</b></h2>
                            </div>
                            <div class="col-md-12">
                                <h5 style="margin: 0;">Domeniul @job.Domain.Name, @job.City.Name</h5>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <h4>Nu ai aplicat pentru niciun job.</h4>
        </div>
    </div>
}

