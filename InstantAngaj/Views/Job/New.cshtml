@model InstantAngaj.Models.Job

@{
    ViewBag.Title = "Creeaza un job nou";
}

<h2>@ViewBag.Title</h2>

@Html.ValidationSummary("", new { @class = "text-danger" })

@using (Html.BeginForm("New", "Job", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <h5>Completeaza datele de mai jos</h5>
    <hr />

    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Domain", "Domeniul")
            </div>
            <div class="col-md-12">
                @Html.DropDownListFor(m => m.DomainId, new SelectList(Model.AllDomains, "Value", "Text"), "Selectati domeniul", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Name", "Nume")
            </div>
            <div class="col-md-12">
                @Html.TextBox("Name", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Description", "Descriere")
            </div>
            <div class="col-md-12">
                @Html.TextBox("Description", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("City", "Oras")
            </div>
            <div class="col-md-12">
                @Html.DropDownListFor(m => m.CityId, new SelectList(Model.AllCities, "Value", "Text"), "Selectati orasul", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Salary", "Salariu")
            </div>
            <div class="col-md-12">
                @Html.TextBox("Salary", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("MinimumExperience", "Experienta minima")
            </div>
            <div class="col-md-12">
                @Html.TextBox("MinimumExperience", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("Degree", "Competenta necesara")
            </div>
            <div class="col-md-12">
                @Html.DropDownListFor(m => m.DegreeId, new SelectList(Model.AllDegrees, "Value", "Text"), "Selectati competenta", new { @class = "form-control" })
            </div>
        </div>


    </div>

    <div class="form-group">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <div class="col-md-12">
                <input type="submit" class="btn btn-primary btn-block" value="Creeaza job" />
            </div>
        </div>
    </div>
}

